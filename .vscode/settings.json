{
    "prettier.tabWidth": 4,
    "prettier.bracketSpacing": true,
    "prettier.printWidth": 120,
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/tmp": true,
        "**/assets": true,
        "**/dist": true,
        "**/prod": true,
        "**/tests": true,
        "**/vendor": true
    },
    "editor.snippetSuggestions": "top",
    "vsicons.presets.angular": false,
    "workbench.colorTheme": "Ember Frost",
    "editor.formatOnSave": true,
    "html.format.enable": true,
    "html.format.indentHandlebars": true,
    "beautify.language": {
        "css": [
            "css",
            "scss"
        ],
        "html": [
            "htm",
            "html",
            "hbs"
        ]
    },
    "editor.tabSize": 4,
    "html.format.maxPreserveNewLines": 0,
    "html.format.wrapLineLength": 120,
    "editor.detectIndentation": false,
    "path-intellisense.mappings": {
        "camilyo": "${workspaceRoot}/app"
    },
    "stylelint.enable": true,
    "css.validate": false,
    "scss.validate": false,
    "stylefmt.useStylelintConfigOverrides": true,
    "html.format.unformatted": "a, abbr, acronym, b, bdo, big, br, cite, code, dfn, em, i, img, input, kbd, map, object, q, samp, select, small, strong, sub, sup, textarea, tt, var",
    "git.enabled": false
}
